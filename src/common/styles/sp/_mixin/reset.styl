@import "nib"
global-reset()

*, *:before, *:after
  box-sizing: border-box
  -webkit-appearance: none

* > :first-child
  margin-top: 0 !important

body
  -webkit-text-size-adjust: none
  -webkit-touch-callout: none

img
  vertical-align top
  width 100%
  
a
  color #4c4c4c
  text-decoration none

button
  background none
  border none
  margin 0
  padding 0
