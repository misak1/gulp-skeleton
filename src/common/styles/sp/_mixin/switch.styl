.switcher
  background #dcdddd
  .switcher_box
    margin-top 1px
    border 2px solid $white
    background $white
  .switcher_btn
    font-size 125%
    a
      position relative
      display block
      padding 10px 30px 10px 10px
      color $blue
      background linear-gradient(to bottom,  #eaeaea 0%,#dcdddc 100%)
      background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#eaeaea), color-stop(100%,#dcdddc))
      background -webkit-linear-gradient(top,  #eaeaea 0%,#dcdddc 100%)
    a::after
      position absolute
      content ""
      width 18px
      height 10px
      margin-top -5px
      top 50%
      right 12px
      background url(/zemi/trial/common/images/sp/icon_switch.png) no-repeat 0 -9px
      background-size 18px 19px
      display block
  .active
    a::after
      position absolute
      content ""
      width 18px
      height 10px
      margin-top -5px
      top 50%
      right 12px
      background url(/zemi/trial/common/images/sp/icon_switch.png) no-repeat 0 0
      background-size 18px 19px
      display block
  .switcher_text
    display none
    padding 0 10px
    .unit
      padding 20px 0
  &first-child
    margin-top 0

h3.cont-tit
  color $blue
  font-size 150%
  margin-top 20px
  line-height 1.3

h4.line-tit
  margin-top 20px
  padding-left 12px
  border-left 4px solid $blue
  color $blue
  font-size 130%

